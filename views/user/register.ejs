<% layout('../layout/boilerplate') -%>
<div class="container d-flex justify-content-center align-items-center mt-5 mb-5">
  <div class="row">
      <div class="col-md-6 offset-md-4 col-xl-4 offset-xl-4">
          <div class="card shadow">
              <img crossorigin="anonymous"  src="https://plus.unsplash.com/premium_photo-1680788452823-49bb63651490?q=80&w=1631&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
                  alt="" class="card-img-top" />
              <div class="card-body">
                  <h5 class="card-title">Register</h5>
                  <form action="/register" method="POST" class="validated-form" novalidate>
                      <div class="mb-3">
                          <label class="form-label" for="username">Username</label>
                          <input class="form-control" type="text" id="username" name="username" autofocus required>
                          <div class="valid-feedback">
                              Looks good!
                          </div>
                      </div>
                      <div class="mb-2">
                        <label for="location" class="form-label">Gmail</label>
                        <input type="email" class="form-control" id="location" name="email" required>
                        <div class="valid-feedback">
                            looks Good!
                          </div>

                      <div class="mb-3">
                          <label class="form-label" for="password">Password</label>
                          <input class="form-control" type="password" id="password" name="password" required>
                          <div class="valid-feedback">
                              Looks good!
                          </div>
                      </div>
                      <button class="btn btn-success btn-block">Sign Up</button>
                  </form>
              </div>
          </div>
      </div>
  </div>
</div>

